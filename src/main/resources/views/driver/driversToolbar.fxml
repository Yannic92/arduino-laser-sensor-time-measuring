<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<SplitPane fx:id="topLevelSplitPane" dividerPositions="0.9038662486938349" prefHeight="42.0" prefWidth="959.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.klem.yannic.speedway.driver.DriversToolbarController">
    <items>
        <ToolBar>
            <items>
                <TextField fx:id="driversFilter" promptText="Fahrerliste filtern" />
                <Button layoutX="10.0" layoutY="9.0" mnemonicParsing="false" onAction="#openNewDriverDialog" text="Neuer Fahrer">
                    <graphic>
                        <ImageView fitHeight="25.0" fitWidth="25.0" preserveRatio="true">
                            <image>
                                <Image url="/icons/driver.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </items>
        </ToolBar>
        <ToolBar nodeOrientation="RIGHT_TO_LEFT">
            <items>
                <Button mnemonicParsing="false" onAction="#openNewTimeTable" text="Zeiten">
                    <graphic>
                        <ImageView fitHeight="25.0" fitWidth="25.0" preserveRatio="true">
                            <image>
                                <Image url="/icons/time.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </items>
        </ToolBar>
    </items>
</SplitPane>
